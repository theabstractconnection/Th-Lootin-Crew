<%= simple_form_for(@vessel) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category, collection: Vessel.categories.keys %>
    <%= f.input :price %>
    <%= f.input :address, required: true %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-danger"%>
  </div>
<% end %>
