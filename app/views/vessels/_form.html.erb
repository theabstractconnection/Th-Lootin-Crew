<%= simple_form_for(@vessel) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category, collection: Vessel.categories.keys %>
    <%= f.input :price %>
<!--     <label for="city">Vessel city location</label>
    <input name = "city" class = "form-control" type = "text" placeholder="enter city" required> -->
    <%= f.input :city, required: true %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
