<%= link_to vessel_path(vessel) do %>
  <div id="content">
    <div class="content-title">
      <%= vessel.name %>
    </div>
    <div class="content-img" style="height: 100px; width: 100px;background-size: cover; background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.5) 50%), url(<%= vessel.photo.url(:card) %>)";>
    </div>
  </div>
<% end %>
