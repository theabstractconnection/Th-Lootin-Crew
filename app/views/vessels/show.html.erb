<%= render 'card-banner', vessel: @vessel %>

<div class="container-fluid">
  <div class="row padded">
    <% if current_user == @vessel.user %>
      <%= render 'configure',
        vessel: @vessel,
        vessel_options: @vessel_options,
        vessel_option: @vessel_option %>
    <% else %>
      <%= render 'bookings/booking',
      vessel: @vessel,
      booking: @booking,
      vessel_options: @vessel_options,
      crews: @crews %>
    <% end %>
  </div>
  <div class="row padded">
    <%= render 'reviews', vessel: @vessel%>
  </div>
</div>

<div class="links">
  <%= link_to 'Back', vessels_path, class: "btn btn-danger" %>
</div>

<%= javascript_pack_tag 'selected_options' %>
