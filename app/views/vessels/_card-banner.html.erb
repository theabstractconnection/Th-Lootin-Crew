<div class="vessel-card-wide" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.5) 50%), url(<%= vessel.photo.url(:card_wide)%>)";>
  <h1 class="text-center">
    <%= vessel.name %>
    <% if current_user == vessel.user %>
    <span><%= link_to 'Edit', edit_vessel_path(@vessel), class: "btn btn-danger" %></span>
  <% end %>
  </h1>
    <div class="vessel_review">
    <%= render "shared/rating", thing: vessel %>
  </div>
  <h3><%= vessel.category %></h3>
  <div><%= vessel.description %></div>
  <div>
    <h4 ><span id="vessel_price"><%= vessel.price %></span><span> $/Day</span></h4>
  </div>
</div>
