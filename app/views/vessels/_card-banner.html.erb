<div class="vessel-card-wide" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.5) 50%), url(<%= vessel.photo.url(:card_wide)%>)";>
  <h1 class="text-center">
    <%= vessel.name %>
  </h1>
  <div><%= vessel.description %></div>
  <div>
    <span id="vessel_price"><%= vessel.price %></span>
    <span>$/Day</span>
  </div>
  <div class="vessel_review">
    <% vessel.rating.to_i.times do %>
    <i class="far fa-star"></i>
    <% end %>
  </div>
  <% if current_user == vessel.user %>
    <div><%= link_to 'Edit', edit_vessel_path(@vessel), class: "btn btn-danger" %></div>
  <% end %>
</div>
