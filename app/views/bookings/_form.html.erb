<div id="booking-form">
  <div id="price">0</div>

  <%= simple_form_for [vessel,booking] do |f| %>
  <%#= f.input_field :start_date, as: :date, html5: true, required: true %>
  <%#= f.input_field :end_date, as: :date, html5: true, required: true %>
  <div class='col-sm-6'>
    <div class="form-group">
      <div class='input-group date' id='datetimepickerstart'>
        <input type='text' class="form-control" name="booking[start_date]" id="booking_start_date" />
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>

  <div class='col-sm-6'>
    <div class="form-group">
      <div class='input-group date' id='datetimepickerend'>
        <input type='text' class="form-control" name="booking[end_date]" id="booking_end_date" />
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>

  <%= f.button :submit, "Book this Vessel", class: "btn btn-danger btn-block"%>
  <% end %>

</div>

<script type="text/javascript">
  $(function () {
    $('#datetimepickerstart').datetimepicker({
      format: 'YYYY-MM-DD'
    });
  });
</script>

<script type="text/javascript">
  $(function () {
    $('#datetimepickerend').datetimepicker({
      format: 'YYYY-MM-DD'
    });
  });
</script>






