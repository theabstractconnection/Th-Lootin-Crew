<%= link_to booking_path(booking) do %>
<div class="card-mybookings">
  <div class="card-mybookings-image" style="background-image: linear-gradient(-225deg, rgba(215, 68, 56,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path booking.vessel.photo %>');">
  </div>

  <div class="card-mybookings-infos">
    <h2>Vessel : <%= booking.vessel.name%></h2>
    <h3>Price : <%= booking.price%>$</h3>
    <div class="card-mybookings-dates">
      <p><%= booking.start_date%></p>
      <i class="fas fa-arrow-circle-right"></i>
      <p><%= booking.end_date%></p>
    </div>
  </div>
</div>
<% end %>
