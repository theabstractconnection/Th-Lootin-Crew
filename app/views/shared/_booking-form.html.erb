<%= simple_form_for booking do |f| %>
  <%= f.input :vessel_id, :as => :hidden, :input_html => { :value => vessel.id } %>
  <%= f.input :user_id, :as => :hidden, :input_html => { :value => vessel.id } %>
  <%= f.input :start_date, required: true %>
  <%= f.input :end_date, required: true %>
  <%= f.button :submit, "Book this Vessel"%>
<% end %>
