<div class="vessel-options-from">
  <%= simple_form_for [vessel, vessel_option] do |f| %>
  <div class="form-inputs">
    <%= f.association :option, prompt: "Choose an Option", required: true %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Add Option", class: "btn btn-danger"%>
  </div>
  <% end %>
</div>
